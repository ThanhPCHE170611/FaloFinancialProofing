@page "/paymentcreate"
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700,900|Roboto+Slab:400,700" />
    <link href="../assets/css/nucleo-icons.css" rel="stylesheet" />
    <link href="../assets/css/nucleo-svg.css" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/42d5adcbca.js" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Round" rel="stylesheet">
    <link id="pagestyle" href="../assets/css/material-dashboard.css?v=3.1.0" rel="stylesheet" />
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
    <style>
        .form-control {
            border: 1px solid #ced4da;
            border-radius: 0.25rem;
        }

        #save-btn {
            display: flex;
            justify-content: center;
            margin-top: 20px;
        }

        #fileList {
            margin-top: 10px;
            display: flex;
            flex-wrap: wrap;
            gap: 5px;
        }

            #fileList li {
                padding: 5px 10px;
                background-color: #e0e0e0;
                border-radius: 5px;
                list-style: none;
            }

        /* Style for the tab navigation */
        .nav-tabs {
            display: flex;
            justify-content: space-around;
            margin-bottom: 20px;
            border-bottom: 2px solid #e0e0e0;
        }

            .nav-tabs a {
                padding: 10px 20px;
                text-decoration: none;
                color: #000;
                background-color: #f1f1f1;
                border-radius: 5px;
            }

                .nav-tabs a.active {
                    background-color: #EC407A;
                    color: #fff;
                }

                .nav-tabs a:hover {
                    background-color: #007bff;
                    color: #fff;
                }

        /* Searchable select box */
        .searchable-select {
            width: 100%;
            padding: 10px;
            border-radius: 5px;
            border: 1px solid #ced4da;
        }

    </style>
</head>

<body>
    <div class="container-fluid py-4">
        <div class="row">
            <div class="col-12">
                <div class="card my-4">
                    <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                        <div class="pt-4 pb-3 d-flex justify-content-between align-items-center">
                            <nav class="nav-tabs">
                                <a href="/campaigndetail">Campaign Detail</a>
                                <a href="/prepaymanagement">Prepay Request</a>
                                <a href="/paymentmanagement" class="active">Payment Request</a>
                                <a href="/prepayvoucher">Prepay Voucher</a>
                                <a href="/paymentvoucher">Payment Voucher</a>
                                <a href="/accountingbook">Accounting Book</a>
                                <a href="/member">Member</a>
                            </nav>
                        </div>
                    </div>
                    <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                        <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3 d-flex justify-content-between align-items-center">
                            <h6 class="text-white text-capitalize ps-3 mb-0">Create Payment Request</h6>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label for="sender" class="form-label">Sender</label>
                            <input type="text" class="form-control" id="sender" placeholder="Enter sender name">
                        </div>

                        <div class="mb-3">
                            <label for="title" class="form-label">Title</label>
                            <input type="text" class="form-control" id="title" placeholder="Enter title">
                        </div>

                        <div class="mb-3">
                            <label for="expectedMoney" class="form-label">Money Payment</label>
                            <input type="number" class="form-control" id="expectedMoney" placeholder="Enter expected money" min="1000" step="100000">
                        </div>

                        <div class="mb-3">
                            <label for="assignFrom" class="form-label">Assign From</label>
                            <select id="assignFrom" class="searchable-select form-control">
                                <option value="person1">Person 1</option>
                                <option value="person2">Person 2</option>
                                <option value="person3">Person 3</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label for="prepayRequest" class="form-label">Prepay Request Correspond</label>
                            <select id="prepayRequest" class="searchable-select form-control">
                                <option value="prepay1">Prepay Title 1</option>
                                <option value="prepay2">Prepay Title 2</option>
                                <option value="prepay3">Prepay Title 3</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label for="description" class="form-label">Description</label>
                            <textarea class="form-control" id="description" rows="3" placeholder="Enter description"></textarea>
                        </div>

                        <div class="mb-3">
                            <label for="attachments" class="form-label">Attachments Payment File</label>
                            <input type="file" class="form-control" id="attachments" multiple>
                            <ul id="fileList">
                            </ul>
                        </div>
                    </div>

                    <div id="save-btn">
                        <button class="btn btn-warning btn-lg" id="createBtn" style="margin-left:10px">Create</button>
                        <div>
                            <a href="paymentmanagement" class="btn btn-success btn-lg" style="margin-left:10px">Cancel</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="../assets/js/core/popper.min.js"></script>
    <script src="../assets/js/core/bootstrap.min.js"></script>

    <script>
        document.getElementById('attachments').addEventListener('change', function (e) {
            const fileList = document.getElementById('fileList');
            fileList.innerHTML = '';
            Array.from(e.target.files).forEach(file => {
                const li = document.createElement('li');
                const a = document.createElement('a');
                a.href = URL.createObjectURL(file);
                a.textContent = file.name;
                a.download = file.name;
                li.appendChild(a);
                fileList.appendChild(li);
            });
        });

        document.getElementById('createBtn').addEventListener('click', function() {
            const sender = document.getElementById('sender').value;
            const title = document.getElementById('title').value;
            const expectedMoney = document.getElementById('expectedMoney').value;
            const assignFrom = document.getElementById('assignFrom').value;
            const description = document.getElementById('description').value;
            const attachments = document.getElementById('attachments').files;

            // Ensure that a file is selected
            if (attachments.length === 0) {
                alert('Please attach at least one file before creating.');
                return; // Prevent submission
            }

            // If file is selected, proceed with the creation
            console.log({
                sender,
                title,
                expectedMoney,
                assignFrom,
                description
            });

            alert('Payment request saved!');
        });
    </script>
</body>

</html>
